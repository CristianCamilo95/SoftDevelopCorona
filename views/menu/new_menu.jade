extends ../layout.jade
block contenido
  div(class="col-md-5 center-block no-float top-space text-left")
      h1 Agrega productos a tu cotización
      form(method="post" action="/menu" style="margin-top:1.5em;")
        div(class="form-group")
          label Nombre
          input(type="text" name="title" placeholder="Nombre del producto" class="form-control")
        div(class="form-group")
          label Descripción
          textarea(name="description" placeholder="Descripción" class="form-control")
        div(class="form-group")
          label Cantidad
          input(type="number" name="pricing" placeholder="Cantidad" class="form-control")
        div(class="form-group text-right")
          input(type="submit" class="btn btn-info" value="Agregar")
